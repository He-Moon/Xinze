# ===========================================
# 心则项目环境变量配置
# ===========================================

# 应用配置
NEXT_PUBLIC_APP_NAME=心则
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=心之准则，行动之始
NEXT_PUBLIC_DEBUG=true

# API 配置
NEXT_PUBLIC_API_URL=/api
# 生产环境示例: https://xinze-app.vercel.app/api

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/guanzhi"
# 开发环境示例: file:./dev.db
# 生产环境示例: postgresql://username:password@host:port/database

# Redis 配置
REDIS_URL="redis://localhost:6379"

# 认证配置
NEXTAUTH_SECRET="your-secret-key"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# AI 服务配置
OPENAI_API_KEY="your-openai-key"
PINECONE_API_KEY="your-pinecone-key"
PINECONE_ENVIRONMENT="your-pinecone-env"

# Supabase 配置 (可选)
SUPABASE_URL="your-supabase-url"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 文件上传配置 (可选)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 环境配置
NODE_ENV="development"
