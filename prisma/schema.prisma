// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}
// postgresql || sqlite
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  password      String?   // 用于邮箱密码登录
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  tasks    Task[]
  goals    Goal[]
  values   Value[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Task {
  id          String   @id @default(cuid())
  title       String
  type        String   @default("task") // task, idea, link
  content     String?  // 任务内容、想法内容、链接URL
  priority    String   @default("routine") // important_urgent, important_not_urgent, not_important_urgent, routine
  status      String   @default("pending") // pending, in_progress, completed, cancelled
  
  // AI分析信息
  aiType        String?  // AI识别的类型
  aiSummary     String?  // AI生成的摘要
  aiConfidence  Float?   // AI置信度
  aiReasoning   String?  // AI分析理由
  aiModel       String?  // 使用的AI模型
  
  // 新增：时间分析
  estimatedDuration String?  // 预估完成时间
  hasDeadline       Boolean  @default(false)  // 是否有截止时间
  suggestedTimeframe String? // 建议执行时间段
  
  // 新增：重复性分析
  isRecurring Boolean @default(false)  // 是否重复任务
  frequency   String? // daily, weekly, monthly
  
  // 向量嵌入 (用于语义搜索) - 暂时注释，等启用 pgvector 后再取消注释
  // embedding Unsupported("vector(1536)")? // OpenAI 嵌入向量
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 任务-目标关联
  taskGoals TaskGoalRelation[]

  @@map("tasks")
}

model Goal {
  id          String   @id @default(cuid())
  title       String
  description String?
  priority    Int      @default(1)
  status      String   @default("active") // active, completed, paused
  
  // AI分析信息
  aiType        String?  // AI识别的类型
  aiSummary     String?  // AI生成的摘要
  aiConfidence  Float?   // AI置信度
  aiReasoning   String?  // AI分析理由
  aiModel       String?  // 使用的AI模型
  
  // 新增：目标分类和关键词
  category String?  // 目标分类
  keywords String?  // 关键词，JSON格式存储
  
  // 向量嵌入 (用于语义搜索) - 暂时注释，等启用 pgvector 后再取消注释
  // embedding Unsupported("vector(1536)")? // OpenAI 嵌入向量
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 任务-目标关联
  taskGoals TaskGoalRelation[]

  @@map("goals")
}

model Value {
  id          String   @id @default(cuid())
  name        String
  description String?
  weight      Int      @default(1) // 权重 1-10
  
  // AI分析信息
  aiType        String?  // AI识别的类型
  aiSummary     String?  // AI生成的摘要
  aiConfidence  Float?   // AI置信度
  aiReasoning   String?  // AI分析理由
  aiModel       String?  // 使用的AI模型
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("values")
}

// 任务-目标关联表（多对多关系）
model TaskGoalRelation {
  id              String   @id @default(cuid())
  taskId          String
  goalId          String
  alignmentScore  Float    // AI计算的关联强度 0-1
  userConfirmed   Boolean  @default(false)  // 用户是否确认关联
  reasoning       String?  // 关联理由
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@unique([taskId, goalId])
  @@map("task_goal_relations")
}
